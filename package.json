{
  "name": "hotel-review-generator",
  "version": "1.0.0",
  "description": "Professional hotel review generator with modular agent architecture",
  "main": "index.html",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "vite preview --port 3000",
    "serve": "python3 -m http.server 8000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ *.html --ext .js,.html",
    "lint:fix": "eslint src/ *.html --ext .js,.html --fix",
    "format": "prettier --write \"src/**/*.js\" \"*.html\" \"*.md\"",
    "validate": "npm run lint && npm run test && npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --view --preset=perf --form-factor=mobile",
    "a11y": "pa11y http://localhost:3000",
    "deploy:netlify": "netlify deploy --prod --dir dist",
    "deploy:vercel": "vercel --prod",
    "clean": "rm -rf dist node_modules/.cache",
    "prepare": "husky install"
  },
  "keywords": [
    "hotel",
    "review",
    "generator",
    "mobile",
    "pwa",
    "javascript",
    "agents",
    "modular"
  ],
  "author": "Hotel Review Generator Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/hotel-review-generator.git"
  },
  "bugs": {
    "url": "https://github.com/username/hotel-review-generator/issues"
  },
  "homepage": "https://github.com/username/hotel-review-generator#readme",
  "devDependencies": {
    "vite": "^5.0.0",
    "@vitejs/plugin-legacy": "^5.0.0",
    "terser": "^5.24.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/dom": "^9.3.0",
    "lighthouse": "^11.3.0",
    "pa11y": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "dependencies": {
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "iOS >= 12",
    "Safari >= 12"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}